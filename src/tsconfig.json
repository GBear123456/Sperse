{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "lib": [ "es6", "dom" ],
        "mapRoot": "./",
        "module": "esnext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "@abp/*": [ "../node_modules/abp-ng2-module/lib/services/*" ],
            "@abp_http/*": [ "../node_modules/abp-ng2-module/lib/interceptors/*" ],
            "@app/*": [ "./app/*" ],
            "@admin/*": [ "./app/admin/*" ],
            "@root/*": [ "./*" ],
            "@shared/*": [ "./shared/*" ],
            "@node_modules/*": [ "../node_modules/*" ],
            "@angular/*": [ "../node_modules/@angular/*" ],
            "moment": [ "../node_modules/moment/moment.js" ],
            "moment-timezone": [ "../node_modules/moment-timezone/builds/moment-timezone-with-data.min.js" ],
            "sax": [ "./node_modules/sax/lib/sax.js" ]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictTemplates": true,
        "strictInputTypes": false,
        "strictAttributeTypes": false,
        "strictOutputEventTypes": false,
        "strictDomEventTypes": false,
        "strictLiteralTypes": false,
        "strictInjectionParameters": false,
        "compilationMode": "full",
        "enableIvy": true
    },
    "files": [
        "main.ts",
        "polyfills.ts"
    ],
    "exclude": [
        "./**/*.spec.ts",
        "./test.ts"
    ],
    "include": [
        "./typings.d.ts",
        "./node_modules/ng2-image-viewer/",
        "./node_modules/ngx-international-phone-number/src/"
    ]
}